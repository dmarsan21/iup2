---
import { Icon } from 'astro-icon/components';

const programas = [
  {
    nombre: "Derecho",
    descripcion: "Estudia el marco jurídico nacional e internacional, desarrolla habilidades en litigación, mediación y defensa legal con enfoque ético y social.",
    icono: "mdi:scale-balance", // Representa justicia y derecho
    plantel: "Plantel Córdoba",
    rvoe: "RVOE: ES103/2005",
    plantel2: "Plantel Xalapa",
    rvoe2: "RVOE: ES085/2005",
    enlace: "/doctorados/derecho"
  },
  {
    nombre: "Ecoeducación",
    descripcion: "Promueve la conciencia ambiental y el desarrollo sostenible mediante estrategias educativas, gestión ecológica y proyectos comunitarios.",
    icono: "mdi:leaf-circle", // Representa sostenibilidad y ecología
    plantel: "Plantel Córdoba",
    rvoe: "RVOE: SEP-SES/21/114/01/1553/2016-MOD-01-2023",
    plantel2: "Plantel Xalapa",
    rvoe2: "RVOE: SEP-SES/21/114/01/1553/2016-MOD-01-2023",
    enlace: "/doctorados/ecoeducacion"
  },
  {
    nombre: "Alta Dirección",
    descripcion: "Fortalece el liderazgo ejecutivo, la toma de decisiones estratégicas y la visión empresarial para dirigir organizaciones de alto impacto.",
    icono: "mdi:account-tie", // Representa liderazgo y dirección ejecutiva
    plantel: "Plantel Córdoba",
    rvoe: "RVOE: SEP-SES/21/114/01/1187/2014",
    plantel2: "Plantel Xalapa",
    rvoe2: "RVOE: SEP-SES/21/114/01/1187/2014",
    enlace: "/doctorados/alta-direccion"
  },
];

---

<section id="programas" class="py-16 px-4 md:px-8 bg-gray-50">
  <h2 class="text-3xl text-[#1F3C88] md:text-4xl font-bold text-center text-primary mb-12">
    Programas Académicos
  </h2>
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {programas.map((programa) => (
      <div class="bg-white rounded-lg shadow-md p-6 flex flex-col items-start hover:shadow-lg transition">
        <Icon name={programa.icono} class="w-12 h-12 mb-4 text-[#1F3C88]" />
        
        <h3 class="text-xl text-[#1F3C88] font-semibold text-primary mb-2">{programa.nombre}</h3>
        <p class="text-gray-700 mb-2">{programa.descripcion}</p>
        <p class="text-sm text-gray-600 mb-1"><strong>Plantel:</strong> {programa.plantel}</p>
        <p class="text-sm text-gray-600 mb-4"><strong>{programa.rvoe}</strong></p>
        <p class="text-sm text-gray-600 mb-1"><strong>Plantel:</strong> {programa.plantel2}</p>
        <p class="text-sm text-gray-600 mb-4"><strong>{programa.rvoe2}</strong></p>
        <a href={programa.enlace} class="inline-block text-center bg-[#F57C00] text-white px-4 py-2 rounded hover:bg-orange-600 transition">
            Conoce más
          </a>
      </div>
    ))}
  </div>
</section>




