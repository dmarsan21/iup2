---
// Puedes pasar props si quieres hacerlo reutilizable
const { title = "Conoce nuestra oferta Académica", subtitle = "Descubre las oportunidades disponibles para tu crecimiento académico y profesional.", buttonText = "Solicitar Información", buttonLink = "/contact" } = Astro.props;
---

<section class="bg-white py-16 px-6 md:px-12 lg:px-24 flex flex-col-reverse md:flex-row items-center justify-between gap-10">
  <!-- Text Content -->
  <div class="max-w-xl">
    <h1 class="text-4xl md:text-5xl font-bold text-[#1F3C88] mb-4">
      {title}
    </h1>
    <p class="text-gray-600 text-lg mb-6">
      {subtitle}
    </p>
    <a href={buttonLink} class="inline-block bg-[#F57C00] text-white font-semibold py-3 px-6 rounded-md hover:bg-orange-600 transition">
      {buttonText}
    </a>
  </div>

  <!-- Image -->
  <div class="w-full md:w-1/2">
    <img src="/images/iuphero.png" alt="IUP" class="rounded-lg shadow-md w-full object-cover" />
  </div>
</section>