---
const { title, subtitle, description, ingreso, egreso } = Astro.props;
---

<!-- Título principal -->
<section class="bg-white py-12">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h1 class="text-4xl font-extrabold text-[#1F3C88] tracking-tight">{title}</h1>
    {subtitle && (
      <p class="mt-3 text-lg text-[#1F2937]">{subtitle}</p>
    )}
  </div>
</section>

<!-- Descripción general -->
<section class="bg-white py-12">
  <div class="max-w-5xl mx-auto px-6">
    <div class="pl-6 border-l-4 border-[#F57C00]">
      <h2 class="text-3xl font-bold text-[#1F3C88] mb-4">Descripción general</h2>
      <p class="text-[#1F2937] text-lg leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</section>


<!-- Perfil de ingreso y egreso -->
<section class="bg-white py-12">
  <div class="max-w-6xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-10">
    <div class="border-l-4 border-[#F57C00] bg-[#F9FAFB] p-6 rounded-lg shadow-sm">
      <h3 class="text-xl font-bold text-[#1F3C88] mb-3">Perfil de ingreso</h3>
      <p class="text-[#1F2937] leading-relaxed">{ingreso}</p>
    </div>
    <div class="border-l-4 border-[#F57C00] bg-[#F9FAFB] p-6 rounded-lg shadow-sm">
      <h3 class="text-xl font-bold text-[#1F3C88] mb-3">Perfil de egreso</h3>
      <p class="text-[#1F2937] leading-relaxed">{egreso}</p>
    </div>
  </div>
</section>


