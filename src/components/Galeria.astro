---
import Image from "astro/components/Image.astro";

// importacion de imagenes
import graduadosImage from '../assets/images/graduados.png';
import civilImage from '../assets/images/civil.png';
import panteraImage from '../assets/images/panterafondo.png';
import criminologiaImage from '../assets/images/criminologia.png';
import estudiandoImage from '../assets/images/estudiando.png';
import futbolImage from '../assets/images/futbol.png';
---

<section class="w-full bg-white py-16 overflow-x-hidden">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-[#003366] mb-10 text-center">
      Vida Universitaria IUP
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 auto-rows-[200px] md:auto-rows-[250px]">

      <!-- Bloque grande horizontal -->
      <div class="sm:col-span-2 bg-neutral-100 rounded-xl overflow-hidden">
        <Image 
          src={graduadosImage} alt="Graduados IUP" class="w-full h-full object-cover" width={600} height={400}
        />
        <!-- <img src="/images/graduados.png" alt="Graduados IUP" class="w-full h-full object-cover" /> -->
      </div>

      <!-- Bloque cuadrado -->
      <div class="bg-neutral-100 rounded-xl overflow-hidden">
        <Image 
          src={civilImage} alt="Ingeniería Civil" class="w-full h-full object-cover" width={600} height={400}
        />
        <!-- <img src="/images/civil.png" alt="Ingeniería Civil" class="w-full h-full object-cover" /> -->
      </div>

      <!-- Bloque vertical -->
      <div class="sm:row-span-2 bg-neutral-100 rounded-xl overflow-hidden">
        <Image 
          src={panteraImage} alt="Pantera IUP" class="w-full h-full object-cover" width={600} height={800}
        />
        <!-- <img src="/images/panterafondo.png" alt="Pantera IUP" class="w-full h-full object-cover" /> -->
      </div>

      <!-- Bloque con frase institucional -->
      <div class="sm:col-span-2 flex items-center justify-center bg-[#F57C00] text-white rounded-xl text-center p-6">
        <p class="text-3xl font-semibold italic leading-snug">
          Fuerza que inspira, garra que trasciende.
        </p>
      </div>

      <!-- Bloque cuadrado -->
      <div class="bg-neutral-100 rounded-xl overflow-hidden">
        <Image 
          src={criminologiaImage} alt="Criminología" class="w-full h-full object-cover" width={600} height={400}
        />
        <!-- <img src="/images/criminologia.png" alt="Criminología" class="w-full h-full object-cover" /> -->
      </div>

      <!-- Bloque laboratorio reducido -->
      <div class="bg-neutral-100 rounded-xl overflow-hidden">
        <Image 
          src={estudiandoImage} alt="Estudiando IUP" class="w-full h-full object-cover" width={600} height={400}
        />
        <!-- <img src="/images/estudiando.png" alt="Estudiando IUP" class="w-full h-full object-cover" /> -->
      </div>

      <!-- Bloque institucional izquierdo -->
      <div class="bg-neutral-100 rounded-xl overflow-hidden">
        <Image 
          src={futbolImage} alt="Torneo IUP" class="w-full h-full object-cover" width={600} height={400}
        />
        <!-- <img src="/images/futbol.png" alt="Torneo IUP" class="w-full h-full object-cover" /> -->
      </div>

      <!-- Bloque institucional amplio para cerrar la cuadrícula -->
      <div class="sm:col-span-2 flex items-center justify-center bg-[#003366] text-white rounded-xl text-center p-6">
        <p class="text-xl md:text-2xl font-semibold italic leading-snug tracking-wide">
          Más de 25 años formando líderes en Veracruz.  
          Educación con garra, conocimiento sin límites.
        </p>
      </div>

    </div>
  </div>
</section>