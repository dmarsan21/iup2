---
import { Icon } from 'astro-icon/components';

const { nombre, direccion, telefono, email, mapa } = Astro.props;
---

<section class="mt-16 mb-18">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-8 text-center text-gray-800">{nombre}</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
      <div class="space-y-5 text-gray-700">
        <div class="flex items-start gap-3">
          <Icon name="mdi:map-marker" class="w-6 h-6 text-[#1F3C88]" />
          <p><strong>Dirección:</strong><br />{direccion}</p>
        </div>

        <div class="flex items-start gap-3">
          <Icon name="mdi:phone" class="w-6 h-6 text-[#1F3C88]" />
          <p><strong>Teléfono:</strong><br />{telefono}</p>
        </div>

        <div class="flex items-start gap-3">
          <Icon name="mdi:email-outline" class="w-6 h-6 text-[#1F3C88]" />
          <p><strong>Email:</strong><br />
            <a href={`mailto:${email}`} class="text-[#1F3C88] underline">{email}</a>
          </p>
        </div>
      </div>

      <div class="w-full h-64 md:h-72 rounded-lg overflow-hidden shadow-md">
        <div class="w-full h-full" set:html={mapa}></div>
      </div>
    </div>
  </div>
</section>