---
import Image from "astro/components/Image.astro";

// importacion de imagenes
import panteraContacto from '../../assets/images/panteracontacto.png';
---

<section class="py-16 bg-gradient-to-br from-[#1F3C88] to-[#1F3C88]/90 text-white">
  <div class="max-w-6xl mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
    
    <!-- Texto institucional -->
    <div>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Contáctanos</h1>
      <p class="text-lg md:text-xl leading-relaxed mb-6">
        Estamos aquí para orientarte. Encuentra nuestros planteles, comunícate con nosotros y da el primer paso hacia tu formación profesional.
      </p>
      <a href="/contacto" class="inline-block bg-[#F57C00] hover:bg-orange-600 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
        Solicita más información
      </a>
    </div>

    <!-- Imagen de la mascota -->
    <div class="flex justify-center">
      <Image 
        src={panteraContacto} alt="Mascota IUP" class="w-72 h-auto" width={288} height={324}
        style="filter: drop-shadow(0 4px 6px rgba(255, 255, 255, 1));"
      />
        
      <!-- <img src="/images/panteracontacto.png" alt="Mascota IUP" class="w-72 h-auto"
        style="filter: drop-shadow(0 4px 6px rgba(255, 255, 255, 1));"
      /> -->
    </div>

  </div>
</section>