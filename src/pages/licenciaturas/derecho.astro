      materias: [
        "Derecho Constitucional II",
        "Derecho Civil II",
        "Derecho Penal II",
        "Derecho Mercantil I",
        "Derecho Laboral I",
        "Lógica Jurídica",
      ],
    },
    {
      periodo: "Cuarto Semestre",
      materias: [
        "Derecho Administrativo I",
        "Derecho Civil III",
